# XSearch Configuration
# Copy this file to .env and customize values

# Base URL - must be set for production!
# Example: https://search.example.com
XSEARCH_BASE_URL=http://localhost:8080

# Secret key for security - MUST be changed for production!
# Generate with: openssl rand -base64 32
XSEARCH_SECRET=CHANGE-ME-TO-RANDOM-SECRET-KEY

# Port mapping (host:container)
XSEARCH_PORT=8080

# Image proxy - prevents leaking user IP to image servers
# Set to true for privacy
XSEARCH_IMAGE_PROXY=true

# Rate limiter - recommended for public instances
XSEARCH_LIMITER=false

# Public instance mode - enables additional security features
XSEARCH_PUBLIC_INSTANCE=false

# Granian server workers and threads
# Workers: number of processes (CPU cores)
# Threads: threads per worker (typically 2-4)
GRANIAN_WORKERS=4
GRANIAN_THREADS=4
